<%= form_with(model: @member, url: member_path(@member), local: true, html: { class: "space-y-6" }) do |form| %>
    <% if @member.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
            <h2 class="font-bold text-lg"><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>
            <ul class="list-disc list-inside mt-2">
                <% @member.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :email, readonly: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm bg-gray-100" %>
    </div>

    <div class="field">
        <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :first_name, readonly: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm bg-gray-100" %>
    </div>

    <div class="field">
        <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :last_name, readonly: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm bg-gray-100" %>
    </div>

    <div class="field">
        <%= form.label :class_year, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :class_year, in: 1900..Date.today.year+1000, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", value: @member.class_year.to_i %>
    </div>

    <div class="field">
        <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :phone_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="field">
        <%= form.label :address, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="field">
        <%= form.label :uin, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :uin, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="actions">
        <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
<% end %>