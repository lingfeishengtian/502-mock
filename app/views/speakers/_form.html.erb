<%= form_with model: @speaker, url: @speaker.new_record? ? speakers_path : speaker_path(@speaker), local: true, html: { class: "space-y-6" } do |f| %>
    <% if @speaker.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
            <h2 class="font-bold mb-2"><%= pluralize(@speaker.errors.count, "error") %> prohibited this speaker from being saved:</h2>
            <ul>
                <% @speaker.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :email, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div class="field">
        <%= f.label :details, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :details, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <%= link_to "Add Event", "#", class: "text-blue-500 hover:underline", data: { action: "add-event" } %>

    <div class="actions">
        <%= f.submit @speaker.new_record? ? "Create Speaker" : "Save Changes", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
<% end %>
